---
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer/Footer.astro'

let title = 'Lost in the 404 PodBits';
let description = '';
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav />

    <main class="py-12 lg:py-16">
      <article class="max-w-6xl mx-auto px-3">
        <header class="mx-auto max-w-3xl text-center content">
          <h1 class="mb-4">You're up 404 PodBits</h1>
          <p>Not much to see here. Go for another page.</p>
          <div class="embed-responsive aspect-ratio-4/3">
            <iframe
              width="560"
              height="315"
              src="https://www.youtube.com/embed/9dKSf8IlXNM?si=j3l3lEPI3lK5hBxp"
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen>
            </iframe>
          </div>
        </header>
      </article>
    </main>
    <Footer />
  </body>
</html>
